{{#each this}}
  <div class='movie-card'>
    <a class='movie-card__link' href='#'>
      <img class='movie-card__image' src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt='Poster of {{title}} movie' width='100%' height='100%' loading='lazy' />
      <div class='movie-card__info'>
        <p class='movie-card__title'>
          {{title}}
        </p>
        <p class='movie-card__descr'>
          {{genres}} | {{year}}
        </p>
      </div>
    </a>
  </div>
{{/each}}