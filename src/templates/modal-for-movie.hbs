<div class='modal-card'>
  <img
    class='modal-image'
    {{#if posterPath}}
          src='https://image.tmdb.org/t/p/w500{{posterPath}}'
          {{else}}
          src='https://media.istockphoto.com/vectors/cat-sits-in-a-box-with-a-404-sign-page-or-file-not-found-connection-vector-id1278808623?k=20&m=1278808623&s=612x612&w=0&h=tmzYgVK5yF-dtVvW81zz-Ebpeqd6EvD38KYGRjczuiw='
          {{/if}}
    alt='Poster of {{title}} movie'
  />
  <div class='movie-description'>
    <h2 class='movie-description__title'>{{title}}</h2>
    <div class='movie-description__lines'>
      <ul class='movie-description__list'>
        <li>Vote / Votes</li>
        <li>Popularity</li>
        <li>Original Title</li>
        <li>Genre</li>
      </ul>
      <ul>
        <li><span class='movie-card__vote'>{{vote}}</span>   / <span class='movie-card__vote movie-card__vote--votes'>{{votes}}</span> </li>
        <li>{{popularity}}</li>
        <li>{{originalTitle}}</li>
        <li>{{movieGenres}}</li>
      </ul>
    </div>
    <h3 class='movie-description__about-title'>about</h3>
    <p class='movie-description__about-text'>
      {{overview}}
    </p>
    <div class='modal-tabs'>
      <button
        id='watched-btn'
        class='modal-tabs__btn modal-tabs__btn--current'
        type='button'
        data-id='{{id}}'
      >
        add to watched
      </button>
      <button
        id='queue-btn'
        class='modal-tabs__btn'
        type='button'
        data-id='{{id}}'
      >
       add to queue
      </button>
    </div>
    <button
        id='play-trailer'
        class='modal-tabs__btn modal-tabs__btn--trailer'
        type='button'
        data-id='{{id}}'
      >
      <svg class="modal-tabs__youtube-icon" xmlns="http://www.w3.org/2000/svg" data-name="Layer 1" viewBox="0 0 24 24"><path d="M23 9.71a8.5 8.5 0 0 0-.91-4.13 2.92 2.92 0 0 0-1.72-1A78.36 78.36 0 0 0 12 4.27a78.45 78.45 0 0 0-8.34.3 2.87 2.87 0 0 0-1.46.74c-.9.83-1 2.25-1.1 3.45a48.29 48.29 0 0 0 0 6.48 9.55 9.55 0 0 0 .3 2 3.14 3.14 0 0 0 .71 1.36 2.86 2.86 0 0 0 1.49.78 45.18 45.18 0 0 0 6.5.33c3.5.05 6.57 0 10.2-.28a2.88 2.88 0 0 0 1.53-.78 2.49 2.49 0 0 0 .61-1 10.58 10.58 0 0 0 .52-3.4c.04-.56.04-3.94.04-4.54ZM9.74 14.85V8.66l5.92 3.11c-1.66.92-3.85 1.96-5.92 3.08Z"/></svg>
        play trailer
      </button>
  </div>
</div>